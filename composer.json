{
    "name": "wendelladriel/laravel-exa",
    "type": "project",
    "description": "Opinionated Modularized API Skeleton for Laravel",
    "keywords": [
        "framework",
        "laravel",
        "api",
        "boilerplate",
        "skeleton"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/WendellAdriel/laravel-exa/issues",
        "source": "https://github.com/WendellAdriel/laravel-exa"
    },
    "authors": [
        {
            "name": "Wendell Adriel",
            "email": "wendelladriel.ti@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.10",
        "laravel/framework": "^12.30",
        "laravel/tinker": "^2.10",
        "tymon/jwt-auth": "^2.2",
        "wendelladriel/laravel-validated-dto": "^4.2",
        "zircote/swagger-php": "^4.11"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "laravel/pail": "^1.2",
        "laravel/pint": "^1.25",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Exa\\": "exa/",
            "Modules\\": "modules/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "pint --parallel",
            "rector"
        ],
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run"
        ],
        "test:types": [
            "pest --type-coverage --min=100"
        ],
        "test:unit": [
            "pest"
        ],
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "swagger": [
            "sh ./tools/swagger.sh"
        ],
        "prepare": [
            "pint --parallel --dirty",
            "@swagger"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
